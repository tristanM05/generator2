{% extends 'base_ext.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="wrapper container text-center" id="log">
    
    <div class="container">
        <img class='ban' src="/images/ban1.jpg" alt="">
        <h1 id="h1Log">Bienvenue sur le générateur d'impro de courant d'art !</h1>
        <div class="row">
        </div>
            <div class="card cardLog shadow">
                <div class="card-header">
                    <h2 class="text-uppercase p-2 titleCard">Connexion</h2>
                </div>
                <div class="card-body d-flex">
                    <div class="col-lg-6 col-sm-12">
                    {% if erreur %}
                    <div class="alert alert-danger">
                        <p>Une erreur est survenue, le nom d'utilisateur ou le mot de passe est incorrect</p>
                    </div>
                    {% endif %}
                    {% for message in app.flashes('success') %}
                    <div class="container alert alert-success text-center">
                        {{message}}
                    {% endfor %}
                        <form method="post" class="m-auto pt-5" id="log2">
                            <div class="form-group">
                                <label for="mail">Identifiant:</label>
                                <input type="text" class="form-control" name="_username" id="email" required
                                    value="{{identifiant}}">
                            </div>
                            <div class="form-group">
                                <label for="password">Mot de passe:</label>
                                <input type="password" class="form-control" name="_password" id="password" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-info form-control">Connexion</button>
                                {# <a href="">Mot de passe oublié ?</a> #}
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-6" id="imgLog">
                        <img src="/images/undraw.png" alt="" class="img-fluid p-3">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

