{% extends 'base.html.twig' %}

{% block title %}Assistance{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center titleCard mt-4">Comment nous contater ?</h1>
    <div class="assist">
        <p>
            Pour toutes questions ou problèmes sur le site <br>
            utilisé le formulaire suivant et nous prendront en compte <br>
            votre message dans les plus bref delai !
        </p>
    </div>
    <div class="card mt-5 cardAssist">
        <div class="card-body">
            {{form_start(form)}}
                {{form_row(form.message)}}
                <div>
                    <p id="pAssist">*Vous receverez une copie de ce message dans votre boite mail</p>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-info btn-block mt-2" id="btnContact">Envoyer</button>
                </div>
            {{form_end(form)}}
        </div>
    </div>
</div>
{% endblock %}
